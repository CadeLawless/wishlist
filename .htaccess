RewriteEngine On

# Handle static files (CSS, JS, images) - serve them directly
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^(css|js|images|scripts)/.*$ - [L]

# For now, let's keep the original app working and access OOP app directly
# Comment out redirects to avoid conflicts
# RewriteCond %{REQUEST_FILENAME} !-f
# RewriteCond %{REQUEST_FILENAME} !-d
# RewriteRule ^(.*)$ public/index.php [QSA,L]

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Hide sensitive files
<FilesMatch "\.(env|log|ini)$">
    Order allow,deny
    Deny from all
</FilesMatch>
