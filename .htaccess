RewriteEngine On
RewriteBase /wishlist/

# Handle static files (CSS, JS, images) - serve them directly
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^(css|js|images|scripts)/.*$ - [L]

# Redirect the root (localhost/wishlist) to public/index.php
RewriteRule ^$ public/index.php [QSA,L]

# Redirect any other URLs to public/index.php
RewriteRule ^(.+)$ public/index.php [QSA,L]

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Hide sensitive files
<FilesMatch "\.(env|log|ini)$">
    Require all denied
</FilesMatch>
